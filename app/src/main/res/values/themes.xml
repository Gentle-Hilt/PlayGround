<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlayGround" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.MySplash" parent="Theme.SplashScreen.Common">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_self_improvement</item>
        <item name="postSplashScreenTheme">@style/Theme.PlayGround</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHighlight">@color/blue</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textSelectHandle">@drawable/ic_baseline_circle_24</item>
    </style>

    <style name="switchButtonStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/custom_thumb_selector</item>
    </style>


    <style name="date_picker" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:textSize">24sp</item>
    </style>


    <style name="Switcher" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#03FFEA</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>


    <style name="Theme.PlayGround.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PlayGround.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PlayGround.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.Draggable" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">#F3F3F3</item>
    </style>


</resources>